{
  "compilerOptions": {
    "target": "ES2020",               // Targeting modern JavaScript (ES2020)
   // "module": "ESNext",               // Using ESNext module resolution
    "lib": ["DOM", "ES2020"],         // Include DOM and ES2020 library support
    "jsx": "react-jsx",               // For React 17+ JSX transform
    "moduleResolution": "node",       // Node-style module resolution
    "esModuleInterop": true,          // Interoperability for CommonJS/ES Modules
    "skipLibCheck": true,             // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing
    "strict": true,                   // Enable all strict type checking options

    "rootDir": "./src",               // Specifies the root directory of input files
    "outDir": "./dist",               // Specifies the output directory for compiled files
    "declaration": true,              // Generates .d.ts declaration files
    "declarationDir": "./dist",       // Output directory for declaration files
    "removeComments": true,           // Removes comments from the output files
    "sourceMap": true,                // Generates source maps for easier debugging
    "preserveSymlinks": true,         // Preserve symbolic links
    "module": "commonjs"              // CommonJS modules for Node.js
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
