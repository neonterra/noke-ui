{
  "name": "noke-ui",
  "version": "1.0.0",
  "description": "A UI component library for React",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "import": "./dist/components/*/index.js",
      "require": "./dist/components/*/index.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "nodemon --watch 'src/**/*' --exec 'npm run build' --ext ts,tsx"
  },
  "author": "Neonterra <neonterras@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neonterra/noke-ui.git"
  },
  "homepage": "https://github.com/neonterra/noke-ui#readme",
  "bugs": {
    "url": "https://github.com/neonterra/noke-ui/issues"
  },
  "devDependencies": {
    "@fontsource/nunito-sans": "^5.1.0",
    "@fontsource/poppins": "^5.1.0",
    "@types/react": "^18.3.11",
    "nodemon": "^3.1.7",
    "rimraf": "^4.1.2",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@fontsource/nunito-sans": "^5.1.0",
    "@fontsource/poppins": "^5.1.0",
    "react": "^18.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0"
  }
}
