{
  "name": "noke-ui",
  "version": "1.3.2",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "import": "./dist/components/*/index.js",
      "require": "./dist/components/*/index.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "nodemon --watch 'src/**/*' --exec 'npm run build' --ext ts,tsx",
    "version:bump:patch": "npm version patch",
    "version:bump:minor": "npm version minor",
    "version:bump:major": "npm version major",
    "prepublish": "npm run build",
    "publish:patch": "npm run version:bump:patch && npm publish",
    "publish:minor": "npm run version:bump:minor && npm publish",
    "publish:major": "npm run version:bump:major && npm publish"
  },
  "peerDependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@fontsource/nunito-sans": "^5.1.0",
    "@fontsource/poppins": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/react": "^18.3.11",
    "nodemon": "^3.1.7",
    "rimraf": "^4.1.2",
    "rollup": "^4.24.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.1.6"
  }
}
